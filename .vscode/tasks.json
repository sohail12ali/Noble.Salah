            "group": "build",
            "dependsOn": ["build-common"],
            "detail": "Builds the Integration project.",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
