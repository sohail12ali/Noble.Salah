{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Noble.Salah.UI.Web (Blazor WASM)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-web",
            "program": "dotnet",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/Noble.Salah.UI.Web"
            ],
            "cwd": "${workspaceFolder}/Noble.Salah.UI.Web",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "console": "integratedTerminal",
            "internalConsoleOptions": "openOnSessionStart",
            "justMyCode": true,
            "detail": "Debugs the Blazor WebAssembly UI project with proper dependencies.",
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Noble.Salah.AppHost (.NET Aspire)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-apphost",
            "program": "dotnet",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/Noble.Salah.AppHost"
            ],
            "cwd": "${workspaceFolder}/Noble.Salah.AppHost",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal",
            "internalConsoleOptions": "openOnSessionStart",
            "justMyCode": true,
            "detail": "Debugs the .NET Aspire AppHost project."
        },
        {
            "name": ".NET MAUI (All Platforms)",
            "type": "maui",
            "request": "launch",
            "preLaunchTask": "build-maui",
            "justMyCode": true,
            "internalConsoleOptions": "openOnSessionStart",
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal",
            "detail": "Debugs the MAUI app for all platforms."
        },
        {
            "name": "Noble.Salah.UI (MAUI Windows)",
            "type": "maui",
            "request": "launch",
            "preLaunchTask": "build-maui",
            "projectPath": "${workspaceFolder}/Noble.Salah.UI/Noble.Salah.UI/Noble.Salah.UI.csproj",
            "targetFramework": "net9.0-windows10.0.19041.0",
            "justMyCode": true,
            "internalConsoleOptions": "openOnSessionStart",
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal",
            "detail": "Debugs the MAUI Windows app."
        },
        {
            "name": "Noble.Salah.UI (MAUI Android)",
            "type": "maui",
            "request": "launch",
            "preLaunchTask": "build-maui",
            "projectPath": "${workspaceFolder}/Noble.Salah.UI/Noble.Salah.UI/Noble.Salah.UI.csproj",
            "targetFramework": "net9.0-android",
            "justMyCode": true,
            "internalConsoleOptions": "openOnSessionStart",
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal",
            "detail": "Debugs the MAUI Android app."
        },
        {
            "name": "Noble.Salah.UI (MAUI iOS)",
            "type": "maui",
            "request": "launch",
            "preLaunchTask": "build-maui",
            "projectPath": "${workspaceFolder}/Noble.Salah.UI/Noble.Salah.UI/Noble.Salah.UI.csproj",
            "targetFramework": "net9.0-ios",
            "justMyCode": true,
            "internalConsoleOptions": "openOnSessionStart",
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal",
            "detail": "Debugs the MAUI iOS app."
        },
        {
            "name": "Noble.Salah.UI (MAUI macOS)",
            "type": "maui",
            "request": "launch",
            "preLaunchTask": "build-maui",
            "projectPath": "${workspaceFolder}/Noble.Salah.UI/Noble.Salah.UI/Noble.Salah.UI.csproj",
            "targetFramework": "net9.0-maccatalyst",
            "justMyCode": true,
            "internalConsoleOptions": "openOnSessionStart",
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal",
            "detail": "Debugs the MAUI macOS app."
        },
        {
            "name": "Debug Current File",
            "type": "coreclr",
            "request": "launch",
            "program": "${file}",
            "args": [],
            "cwd": "${fileDirname}",
            "stopAtEntry": false,
            "console": "integratedTerminal",
            "internalConsoleOptions": "openOnSessionStart",
            "justMyCode": true,
            "envFile": "${workspaceFolder}/.env",
            "detail": "Debugs the currently open file."
        },
        {
            "name": "Attach to Process",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}",
            "justMyCode": true,
            "detail": "Attaches to a running .NET process for debugging."
        },
        {
            "name": "Debug Integration Tests",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-integration",
            "program": "dotnet",
            "args": [
                "test",
                "${workspaceFolder}/Noble.Salah.Integration/Noble.Salah.Integration.csproj",
                "--logger",
                "console;verbosity=detailed"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "integratedTerminal",
            "internalConsoleOptions": "openOnSessionStart",
            "justMyCode": true,
            "envFile": "${workspaceFolder}/.env",
            "detail": "Debugs integration tests in the Integration project."
        }
    ]
}